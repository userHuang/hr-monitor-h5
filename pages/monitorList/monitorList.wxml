<!--pages/monitorList/monitorList.wxml-->
<view class="monitorList-page">
    <view class="search-area">
        <icon class="icon-box-img" type="search"></icon>
        <input class="search-input" placeholder="输入设备名称搜索" 	placeholder-class="search-placeholder" type="text" />
    </view>
    <view class="status-tab">
        <view class="item-status" wx:for="{{statusData}}" wx:key="name" data-index="{{index}}" bindtap="statusSelectTap">
            <text class="status-text {{item.active ? 'status-active' : ''}}">{{item.name}}({{item.value}})</text>
            <view class="status-line" wx:if="{{item.active}}"></view>
        </view>
    </view>
    <view class="device-list">
        <view class="item-device" wx:for="{{deviceData}}" wx:key="index" data-index="{{index}}" bindtap="viewDeviceDetail">
            <view class="device-status {{item.status === '2' ? 'device-status-error' : ''}}">
                <text>{{item.status === '1' ? '正常' : '异常'}}</text>
            </view>
            <view class="device-desc">
                <text class="device-name">{{item.name}}</text>
                <view class="device-detail">
                    <!-- <icon class="device-local-img" type="search" size="24"></icon> -->
                    <text class="device-detail-text">{{item.desc}}</text>
                </view>
            </view>
        </view>
    </view>
</view>
